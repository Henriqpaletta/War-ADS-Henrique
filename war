#include <stdio.h>
#include <string.h>

// Definição da estrutura
struct Territorio {
    char nome[30];
    char cor[10];
    int tropas;
};

// Função principal
int main() {
    // Declaração do vetor de 5 territórios
    struct Territorio lista[5];
    int i;

    printf("--- Cadastro de 5 Territórios ---\n\n");

    // Loop para preencher os dados
    for (i = 0; i < 5; i++) {
        printf("Território %d:\n", i + 1);

        printf("Nome: ");
        scanf("%29s", lista[i].nome);

        printf("Cor: ");
        scanf("%9s", lista[i].cor);

        printf("Tropas: ");
        scanf("%d", &lista[i].tropas);

        printf("\n");
    }

    // Exibição dos dados
    printf("\n--- Territórios Cadastrados ---\n");
    for (i = 0; i < 5; i++) {
        printf("Registro %d:\n", i + 1);
        printf("  Nome: %s\n", lista[i].nome);
        printf("  Cor: %s\n", lista[i].cor);
        printf("  Tropas: %d\n", lista[i].tropas);
        printf("---\n");
    }

    return 0;
}